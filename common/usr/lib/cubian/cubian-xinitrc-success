#!/bin/bash

PATH=/bin:/usr/bin
# remove firstRun sign
if [ -f /root/.firstRun ];then
	rm -f /root/.firstRun 
fi

# update wallpaper
bgsource="/usr/share/images/cubian-desktop/wallpaper/wallpaper_${1}x${2}.png"
bgdefault="/usr/share/images/cubian-desktop/wallpaper/wallpaper_default.png"
bgtarget="/usr/share/images/cubian-desktop/desktop-background"

if [ ! -f $bgsource ];then
	bgsource="$bgdefault"
fi

exist_bgsource=$(readlink $bgtarget)

if [ $? -eq 0 ];then
  if [ "$exist_bgsource" != "$bgsource" ];then
  	ln -sf $bgsource $bgtarget
  fi
else
  	ln -s $bgsource $bgtarget
fi
