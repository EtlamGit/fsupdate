#!/bin/bash

screen_print(){
printf "$1" > /dev/tty0
}

is_server(){
	if [ -e /dev/fb0 ];then
		return 1
	fi
	return 0
}

if [ "$1" = "tty2" ];then
    # don't clean screen on tty2 Alt+F2
    exec /sbin/agetty $@ --noclear
	exit 0
fi

if [ -f /root/.firstRun ];then
  # clear screen
  screen_print "\033[2J\033[1;1H"
  # remove first run flag
  rm /root/.firstRun
  if is_server;then
    exec /sbin/agetty $@ --noclear --login-pause
  else
    exec /sbin/agetty -n -l /usr/sbin/cubian-config-first $@
  fi
  exit 0
fi

exec /sbin/agetty $@
